<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>
  <vendor>MiniOS</vendor>
  <vendor_url>https://minios.dev</vendor_url>
  <action id="dev.minios.driveutility-format">
    <icon_name>driveutility</icon_name>
<description>Format a disk</description>
<description xml:lang="de">Festplatte formatieren</description>
<description xml:lang="es">Formatear un disco</description>
<description xml:lang="fr">Formater un disque</description>
<description xml:lang="id">Format sebuah disk</description>
<description xml:lang="it">Formatta un disco</description>
<description xml:lang="pt">Formatar um disco</description>
<description xml:lang="pt_BR">Formatar um disco</description>
<description xml:lang="ru">Форматировать диск</description>
<message>Authentication is required to format a device.</message>
<message xml:lang="de">Authentifizierung ist erforderlich, um ein Gerät zu formatieren.</message>
<message xml:lang="es">Se requiere autenticación para formatear un dispositivo.</message>
<message xml:lang="fr">L'authentification est requise pour formater un périphérique.</message>
<message xml:lang="id">Autentikasi diperlukan untuk memformat perangkat.</message>
<message xml:lang="it">È necessaria l'autenticazione per formattare un dispositivo.</message>
<message xml:lang="pt">Autenticação é necessária para formatar um dispositivo.</message>
<message xml:lang="pt_BR">Autenticação é necessária para formatar um dispositivo.</message>
<message xml:lang="ru">Требуется аутентификация для форматирования устройства.</message>

    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/driveutility-format</annotate>

    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>
</policyconfig>

